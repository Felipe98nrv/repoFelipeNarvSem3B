<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fnarvaezS3.Page2">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="LabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="TextColor" Value="Fuchsia"/>
                <Setter Property="HorizontalTextAlignment" Value="End"/>

            </Style>
            
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Style="{StaticResource stackLayoutStyle}">
            <Label Text="ESTILO 2" Style="{StaticResource LabelStyle}"/>
            <Label x:Name="lblDato1" Style="{StaticResource LabelStyle}"/>
            <Entry x:Name="txtdatoDos" IsReadOnly="True"/>
            <Button x:Name="btnAbrir" Text="Abrir ventana 3" Clicked="btnAbrir_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>